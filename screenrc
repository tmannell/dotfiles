bind c screen 1
bind ^c screen 1
bind 0 select 10
screen 1

term screen-256color

startup_message off

backtick 1 5 5 true
termcapinfo rxvt* 'hs:ts=\E]2;:fs=\007:ds=\E]2;\007'
hardstatus string "screen (%n: %t)"
caption string "%{= kw}%Y-%m-%d;%c %{= kw}%-Lw%{= kG}%{+b}[%n %t]%{-b}%{= kw}%+Lw%1`"
caption always

termcapinfo xterm* ti@:te@

vbell off

altscreen on
